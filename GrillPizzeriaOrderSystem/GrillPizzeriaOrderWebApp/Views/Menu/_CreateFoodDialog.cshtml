@model ViewModels.MultiViewModels.FoodCreationMultiView

<dialog id="createFoodDialog" class="p-4 rounded shadow-lg w-50">
    <form asp-action="Create" asp-controller="Food" method="post" enctype="multipart/form-data">
        <h3 class="mb-3">Create Food Item</h3>

        <div class="mb-3">
            <label asp-for="NewFood.Name" class="form-label"></label>
            <input asp-for="NewFood.Name" class="form-control" />
            <span asp-validation-for="NewFood.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewFood.Description" class="form-label"></label>
            <textarea asp-for="NewFood.Description" class="form-control"></textarea>
            <span asp-validation-for="NewFood.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewFood.Price" class="form-label"></label>
            <input asp-for="NewFood.Price" class="form-control" />
            <span asp-validation-for="NewFood.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewFood.ImageFile" class="form-label">Upload Image</label>
            <input asp-for="NewFood.ImageFile" type="file" class="form-control" />
            <span asp-validation-for="NewFood.ImageFile" class="text-danger"></span>
        </div>
        <!-- NEEDS FIX
        <div class="mb-3">
            <label asp-for="NewFood.FoodCategoryId" class="form-label">Category</label>
            <select asp-for="Category" asp-items="ViewBag.FoodCategories" class="form-select"></select>
            <span asp-validation-for="FoodCategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Allergens</label>
            <select asp-for="SelectedAllergenIds" asp-items="ViewBag.Allergens" multiple class="form-select"></select>
            <span asp-validation-for="SelectedAllergenIds" class="text-danger"></span>
        </div>
        -->
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-secondary me-2"
                    onclick="document.getElementById('createFoodDialog').close();">
                Cancel
            </button>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
        
    </form>
</dialog>
