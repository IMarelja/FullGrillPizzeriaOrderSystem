@model List<ViewModels.FoodViewModel>

@if (Model is { Count: > 0 })
{
    <div class="row" id="foodGrid">
        @foreach (var food in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4 food-item"
                 data-name="@food.Name.ToLower()"
                 data-category="@food.Category.Name"
                 data-id="@food.Id">
                <div class="card h-100 shadow-sm">
                    <!-- Food Image -->
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(food.ImagePath))
                        {
                            <img src="@food.ImagePath" class="card-img-top food-image" alt="@food.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;"></div>
                        }

                        <!-- Action Icons -->


                        <div class="position-absolute top-0 end-0 m-2">
                            <button class="btn btn-sm btn-light rounded-circle me-1"
                                    data-food-id="@food.Id"
                                    title="Edit Food Item">
                                <span>
                                    edit
                                </span>
                            </button>
                            <button class="btn btn-sm btn-light rounded-circle me-1"
                                    data-food-id="@food.Id"
                                    title="Delete Food Item">
                                <span>
                                    delete
                                </span>
                            </button>
                            <button class="btn btn-sm btn-light rounded-circle"
                                    data-food-id="@food.Id"
                                    title="Add to Cart">
                                <span class="material-symbols-outlined">
                                    add_shopping_cart
                                </span>
                            </button>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@food.Name</h5>
                            <span class="badge bg-secondary">@food.Category.Name</span>
                        </div>

                        <p class="card-text text-muted small flex-grow-1">@food.Description</p>

                        <!-- Price -->
                        <div class="mb-2">
                            <span class="h4 text-success fw-bold">$@food.Price.ToString("F2")</span>
                        </div>

                        <!-- Allergens -->
                        @if (food.Allergens != null && food.Allergens.Any())
                        {
                            <div class="mb-2">
                                <small class="text-muted">Allergens:</small>
                                <div class="mt-1">
                                    @foreach (var allergen in food.Allergens)
                                    {
                                        <span class="badge bg-warning text-dark me-1 small">@allergen</span>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="mb-2">
                                <small class="text-muted">Allergens:</small>
                                <div class="mt-1">
                                    <span class="badge bg-info text-light me-1 small">None</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">No items found.</div>
}
