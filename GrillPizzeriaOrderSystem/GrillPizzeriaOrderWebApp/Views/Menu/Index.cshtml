@{
    ViewData["Title"] = "Food Menu";
    var menu = ViewBag.Foods as List<ViewModels.FoodViewModel> ?? new List<ViewModels.FoodViewModel>();
    var categories = ViewBag.Categories as List<ViewModels.CategoryFoodViewModel> ?? new List<ViewModels.CategoryFoodViewModel>();
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=add_shopping_cart,search" />

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center mb-4">Food Menu</h1>
        </div>
    </div>

    <!-- Search, Filter and Send Section -->
    <div class="row mb-2">
        <div class="col-md-8 mb-3">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="searchInput" class="form-control" placeholder="Search for food items...">
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <select id="categoryFilter" class="form-select">
                <option value="">All Categories</option>
                @foreach (var category in categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div class="col-md-1 mb-3 d-grid">
            <button type="button" class="btn btn-primary">
                <span class="material-symbols-outlined">search</span>
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <button type="button" class="btn btn-primary"
                onclick="document.getElementById('createFoodDialog').showModal();">
            Add New Food
        </button>
        <button type="button" class="btn btn-danger" 
            onclick="showDeleteAllergenDialog()">
            Delete Allergen
        </button>
    </div>

    <div id="partialViewContainer"></div>

    <div class="row" id="foodGrid">
        @foreach (var food in menu)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4 food-item"
                 data-name="@food.Name.ToLower()"
                 data-id="@food.Id">
                <div class="card h-100 shadow-sm">
                    <!-- Food Image -->
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(food.ImagePath))
                        {
                            <img src="@food.ImagePath" class="card-img-top food-image" alt="@food.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;"></div>
                        }

                        <!-- Action Icons -->


                        <div class="position-absolute top-0 end-0 m-2">
                            <button class="btn btn-sm btn-light rounded-circle me-1"
                                    data-food-id="@food.Id"
                                    title="Edit Food Item">
                                <span>
                                    edit
                                </span>
                            </button>
                            <button class="btn btn-sm btn-light rounded-circle me-1"
                                    data-food-id="@food.Id"
                                    title="Delete Food Item">
                                <span>
                                    delete
                                </span>
                            </button>
                            <button class="btn btn-sm btn-light rounded-circle"
                                    data-food-id="@food.Id"
                                    title="Add to Cart">
                                <span class="material-symbols-outlined">
                                    add_shopping_cart
                                </span>
                            </button>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@food.Name</h5>
                            <span class="badge bg-secondary">@food.Category.Name</span>
                        </div>

                        <p class="card-text text-muted small flex-grow-1">@food.Description</p>

                        <!-- Price -->
                        <div class="mb-2">
                            <span class="h4 text-success fw-bold">$@food.Price.ToString("F2")</span>
                        </div>

                        <!-- Allergens -->
                        @if (food.Allergens != null && food.Allergens.Any())
                        {
                            <div class="mb-2">
                                <small class="text-muted">Allergens:</small>
                                <div class="mt-1">
                                    @foreach (var allergen in food.Allergens)
                                    {
                                        <span class="badge bg-warning text-dark me-1 small">@allergen.name</span>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="mb-2">
                                <small class="text-muted">Allergens:</small>
                                <div class="mt-1">
                                    <span class="badge bg-info text-light me-1 small">None</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
   
</div>

<style>
    .food-item {
        transition: transform 0.2s ease-in-out;
    }

        .food-item:hover {
            transform: translateY(-2px);
        }

    .card {
        transition: box-shadow 0.2s;
    }

    .card:hover {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1) !important;
    }

    .food-image {
        transition: transform 0.2s ease-in-out;
    }


    .btn {
        transition: all 0.2s ease-in-out;
    }

    .btn:hover {
        transform: scale(1.1);
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24
    }

</style>


@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize any page-specific functionality here
        });

        function showDeleteAllergenDialog() {
            showLoading(true);

            $.ajax({
                url: '@Url.Action("DeleteAllergenDialog", "Menu")',
                method: 'GET',
                success: function(html) {
                    showLoading(false);
                    $('#partialViewContainer').html(html);
                    $('#deleteAllergenModal').modal('show');
                },
                error: function(xhr, status, error) {
                    showLoading(false);
                    showAlert('Error loading delete dialog: ' + error, 'danger');
                }
            });
        }

        function showLoading(show) {
            if (show) {
                $('#loadingSpinner').show();
            } else {
                $('#loadingSpinner').hide();
            }
        }

        function showAlert(message, type) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;

            // Remove existing alerts
            $('.alert').remove();

            // Add new alert at the top of the page
            $('body').prepend(alertHtml);

            // Auto-hide after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        }
    </script>
}


