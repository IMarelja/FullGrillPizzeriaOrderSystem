<div class="modal fade" id="deleteAllergenModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning"></i>
                    Delete Allergen
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="allergenLoadingSpinner" class="text-center" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading allergens...</span>
                    </div>
                    <p class="mt-2">Loading allergens...</p>
                </div>

                <div id="allergenSelection">
                    <div class="mb-3">
                        <label for="allergenDropdown" class="form-label">
                            <strong>Select Allergen to Delete:</strong>
                        </label>
                        <select id="allergenDropdown" class="form-select">
                            <option value="">Loading allergens...</option>
                        </select>
                    </div>

                    <div id="allergenDetails" class="alert alert-info" style="display: none;">
                        <strong>Warning:</strong> This action cannot be undone. The selected allergen will be permanently deleted from the database.
                    </div>
                </div>

                <div id="deleteResult" class="alert" style="display: none;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" id="deleteAllergenBtn" class="btn btn-danger" disabled>
                    <i class="fas fa-trash"></i> <span id="deleteButtonText">Delete</span>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        let allergens = [];
        let isDeleting = false;

        // Load allergens when modal is shown
        $('#deleteAllergenModal').on('shown.bs.modal', function() {
            loadAllergens();
        });

        // Handle dropdown selection change
        $('#allergenDropdown').on('change', function() {
            const selectedValue = $(this).val();
            $('#deleteAllergenBtn').prop('disabled', !selectedValue || isDeleting);
            $('#deleteResult').hide();

            if (selectedValue) {
                $('#allergenDetails').show();
            } else {
                $('#allergenDetails').hide();
            }
        });

        // Handle delete button click
        $('#deleteAllergenBtn').on('click', function() {
            const selectedId = $('#allergenDropdown').val();
            if (selectedId && !isDeleting) {
                const selectedAllergen = allergens.find(a => a.id == selectedId);
                if (selectedAllergen) {
                    confirmAndDeleteAllergen(selectedId, selectedAllergen.name);
                }
            }
        });

        // Reset modal when closed
        $('#deleteAllergenModal').on('hidden.bs.modal', function() {
            resetModal();
        });

        function loadAllergens() {
            showAllergenLoading(true);
            $('#deleteResult').hide();

            $.ajax({
                url: '@Url.Action("GetAllergens", "Menu")',
                method: 'GET',
                success: function(response) {
                    showAllergenLoading(false);

                    if (response.error) {
                        showResult('Error loading allergens: ' + response.error, 'danger');
                        $('#allergenDropdown').html('<option value="">Failed to load allergens</option>');
                    } else {
                        allergens = response;
                        populateDropdown(response);
                    }
                },
                error: function(xhr, status, error) {
                    showAllergenLoading(false);
                    showResult('Error loading allergens: ' + error, 'danger');
                    $('#allergenDropdown').html('<option value="">Failed to load allergens</option>');
                }
            });
        }

        function populateDropdown(allergens) {
            let options = '<option value="">Select an allergen to delete...</option>';

            if (allergens && allergens.length > 0) {
                allergens.forEach(function(allergen) {
                    options += `<option value="${allergen.id}">${allergen.name}</option>`;
                });
            } else {
                options = '<option value="">No allergens available</option>';
            }

            $('#allergenDropdown').html(options);
        }

        function confirmAndDeleteAllergen(id, name) {
            // Show confirmation
            const confirmed = confirm(`Are you sure you want to delete the allergen "${name}"? This action cannot be undone.`);

            if (confirmed) {
                deleteAllergen(id, name);
            }
        }

        function deleteAllergen(id, name) {
            isDeleting = true;
            setDeletingState(true);

            $.ajax({
                url: '@Url.Action("DeleteAllergen", "Menu")',
                method: 'DELETE',
                data: { id: id },
                success: function(response) {
                    isDeleting = false;
                    setDeletingState(false);

                    if (response.success) {
                        showResult(`Successfully deleted allergen: ${name}`, 'success');

                        // Reload allergens after a short delay
                        setTimeout(function() {
                            loadAllergens();
                        }, 1500);
                    } else {
                        showResult(`Error deleting allergen: ${response.error}`, 'danger');
                    }
                },
                error: function(xhr, status, error) {
                    isDeleting = false;
                    setDeletingState(false);

                    let errorMessage = 'Unknown error occurred';
                    if (xhr.responseJSON && xhr.responseJSON.error) {
                        errorMessage = xhr.responseJSON.error;
                    } else if (error) {
                        errorMessage = error;
                    }

                    showResult(`Error deleting allergen: ${errorMessage}`, 'danger');
                }
            });
        }

        function setDeletingState(deleting) {
            if (deleting) {
                $('#deleteAllergenBtn').prop('disabled', true);
                $('#deleteButtonText').html('<span class="spinner-border spinner-border-sm me-2"></span>Deleting...');
                $('#allergenDropdown').prop('disabled', true);
            } else {
                $('#deleteAllergenBtn').prop('disabled', false);
                $('#deleteButtonText').text('Delete');
                $('#allergenDropdown').prop('disabled', false);
            }
        }

        function showAllergenLoading(show) {
            if (show) {
                $('#allergenLoadingSpinner').show();
                $('#allergenSelection').hide();
            } else {
                $('#allergenLoadingSpinner').hide();
                $('#allergenSelection').show();
            }
        }

        function showResult(message, type) {
            $('#deleteResult')
                .removeClass('alert-success alert-danger alert-warning alert-info')
                .addClass(`alert-${type}`)
                .html(`<i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'}"></i> ${message}`)
                .show();
        }

        function resetModal() {
            $('#allergenDropdown').html('<option value="">Select an allergen...</option>').prop('disabled', false);
            $('#deleteAllergenBtn').prop('disabled', true);
            $('#deleteButtonText').text('Delete');
            $('#deleteResult').hide();
            $('#allergenDetails').hide();
            showAllergenLoading(false);
            allergens = [];
            isDeleting = false;
        }
    });
</script>