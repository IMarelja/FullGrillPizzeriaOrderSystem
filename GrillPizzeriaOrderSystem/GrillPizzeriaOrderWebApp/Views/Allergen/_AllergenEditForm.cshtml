@model ViewModels.AllergenEditViewModel

<div class="card-body">
    <form asp-controller="Allergen" asp-action="Edit">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="editSelect" class="form-label">Select Allergen</label>
            <select id="editSelect" class="allergenListDropdown form-select" name="DeletionAllergen">
                <option value="0">Select an Allergen</option>
            </select>
            <input id="editSelectHiddenId" type="hidden" asp-for="id" class="form-control" />
            <div class="mb-3">
                <label asp-for="name" class="form-label">Name</label>
                <input type="text" asp-for="name" class="form-control" placeholder="Enter new allergen name" />
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil me-2"></i>Edit
            </button>
        </div>
    </form>
</div>

