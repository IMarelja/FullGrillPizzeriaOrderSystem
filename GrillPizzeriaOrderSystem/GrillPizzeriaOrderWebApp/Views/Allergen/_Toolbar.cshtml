@* Allergen toolbar *@
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

<div class="row align-items-center" aria-label="Allergen actions">
    <!-- Left section: full width Add button -->
    <div class="col-md-9">
        <a class="btn btn-primary w-100 d-flex justify-content-center align-items-center"
           asp-controller="Allergen" asp-action="Create" title="Add new allergen">
            Allergen
            <span class="material-icons-outlined">add</span>
        </a>
    </div>

    <!-- Middle section: Edit button (fit to icon) -->
    <div class="col-md-1 justify-content-center">
        <a class="btn btn-light d-flex justify-content-center align-items-center"
           asp-controller="Allergen" asp-action="Edit" title="Edit selected">
            <span class="material-icons-outlined">edit</span>
        </a>
    </div>

    <!-- Right section: Delete button (fit to icon) -->
    <div class="col-md-1 justify-content-center">
        <form asp-controller="Allergen" asp-action="Delete" asp-route-id="__ID__" method="post">
            <a class="btn btn-danger d-flex justify-content-center align-items-center"
                    title="Delete selected">
                <span class="material-icons-outlined">delete</span>
            </a>
        </form>
    </div>
</div>

<style>
    .btn {
        font-family: 'Montserrat', sans-serif;
        font-weight: 600; /* bold-ish for buttons */
    }
    .material-icons-outlined {
        font-size: 32px; /* fits nicely inside Bootstrap buttons */
        line-height: 1;
    }
</style>