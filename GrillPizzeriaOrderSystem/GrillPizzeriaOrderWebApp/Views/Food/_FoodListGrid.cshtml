@model ViewModels.FoodSearchViewModel

@if (Model == null || Model.data == null || !Model.data.Any())
{
    <div class="alert alert-info">No items found.</div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-2">
        @{
            var from = (Model.currentPage - 1) * Model.pageSize + 1;
            var to = (Model.currentPage - 1) * Model.pageSize + Model.currentPageSize;
        }
        <div class="small text-muted">
            Showing @from–@to of @Model.total
        </div>
        <div>
            <span class="badge bg-light text-dark">Page @Model.currentPage of @Model.totalPages</span>
        </div>
    </div>

    <div class="row">
        @foreach (var food in Model.data)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4 food-item"
                 data-name="@food.name?.ToLower()"
                 data-id="@food.id">
                <div class="card h-100 shadow-sm">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(food.imagePath))
                        {
                            <img src="@food.imagePath" class="card-img-top food-image" alt="@food.name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                                <span class="text-muted">No image</span>
                            </div>
                        }

                        <div class="position-absolute top-0 end-0 m-2">
                            <!-- ADMIN -->
                            <button class="btn btn-sm btn-light rounded-circle me-1"
                                    data-food-id="@food.id"
                                    title="Edit Food Item">
                                <span>edit</span>
                            </button>
                            <button class="btn btn-sm btn-light rounded-circle me-1"
                                    data-food-id="@food.id"
                                    title="Delete Food Item">
                                <span>delete</span>
                            </button>

                            <!-- USER + ADMIN -->
                            <button class="btn btn-sm btn-light rounded-circle"
                                    data-food-id="@food.id"
                                    title="Add to Cart">
                                <span class="material-symbols-outlined">add_shopping_cart</span>
                            </button>
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@food.name</h5>
                            <span class="badge bg-secondary">@food.category?.name</span>
                        </div>

                        <p class="card-text text-muted small flex-grow-1">@food.description</p>

                        <div class="mb-2">
                            <span class="h5 text-success fw-bold">
                                @((food.price)) €
                            </span>
                        </div>

                        @if (food.allergens != null && food.allergens.Any())
                        {
                            <div class="mb-2">
                                <small class="text-muted">Allergens:</small>
                                <div class="mt-1">
                                    @foreach (var allergen in food.allergens)
                                    {
                                        <span class="badge bg-warning text-dark me-1 small">@allergen.name</span>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="mb-2">
                                <small class="text-muted">Allergens:</small>
                                <div class="mt-1">
                                    <span class="badge bg-info text-light me-1 small">None</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @* Pagination *@
    @if (Model.totalPages > 1)
    {
        <nav aria-label="Food list pages">
            <ul class="pagination justify-content-center">
                @{
                    var current = Model.currentPage;
                    var total = Model.totalPages;

                    // previous
                    var prevDisabled = current == 1 ? "disabled" : "";
                }
                <li class="page-item @prevDisabled">
                    <a href="#" class="page-link js-page-link" data-page="@(current - 1)">«</a>
                </li>

                @* page numbers (compact window, e.g., ±2) *@
                @{
                    int start = Math.Max(1, current - 2);
                    int end = Math.Min(total, current + 2);

                    if (start > 1)
                    {
                        <li class="page-item">
                            <a href="#" class="page-link js-page-link" data-page="1">1</a>
                        </li>
                        if (start > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">…</span></li>
                        }
                    }

                    for (int p = start; p <= end; p++)
                    {
                        var active = p == current ? "active" : "";
                        <li class="page-item @active">
                            <a href="#" class="page-link js-page-link" data-page="@p">@p</a>
                        </li>
                    }

                    if (end < total)
                    {
                        if (end < total - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">…</span></li>
                        }
                        <li class="page-item">
                            <a href="#" class="page-link js-page-link" data-page="@total">@total</a>
                        </li>
                    }
                }

                @{
                    var nextDisabled = current == total ? "disabled" : "";
                }
                <li class="page-item @nextDisabled">
                    <a href="#" class="page-link js-page-link" data-page="@(current + 1)">»</a>
                </li>
            </ul>
        </nav>
    }
}
